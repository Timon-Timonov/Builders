        create table calculations
        (
        id              bigint auto_increment
        primary key,
        calculationDate datetime(6) null,
        month           date        not null,
        sum             int         null,
        type            int         not null,
        chapter_id      bigint      null,

        constraint FKfgs8r6ahev3lmxdq9s2q7mrc7
        foreign key (chapter_id) references chapters (id)
        );

