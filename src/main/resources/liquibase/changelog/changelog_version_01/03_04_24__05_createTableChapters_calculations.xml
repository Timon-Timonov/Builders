<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet author="Timonov_Timon" id="01">
        <createTable tableName="chapters_calculations">
            <column name="Chapter_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="calculationSet_id" type="bigint">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Timonov_Timon" id="02">
        <addForeignKeyConstraint baseTableName="chapters_calculations"
                                 baseColumnNames="Chapter_id"
                                 constraintName="FK73v85odrnpr6qssl0t7pebbr"
                                 referencedTableName="chapters"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="Timonov_Timon" id="03">
        <addForeignKeyConstraint baseTableName="chapters_calculations"
                                 baseColumnNames="calculationSet_id"
                                 constraintName="FKpqudn5klppakrr5xmbw69lgfv"
                                 referencedTableName="calculations"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>

